@model IEnumerable<TesTransaction.Data.Entity.CASH_BOTTOM_DAY>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Back to Menu", "Transaction", "Home") |
    @Html.ActionLink("All", "Index", "Cash")
</p>

@using (Html.BeginForm())
{
    <label for="SearchString"><strong>Recherche par date: </strong></label>
    <div style="display:flex;">
        @Html.TextBox("SearchString", "", new { @class = "form-control", placeholder = "DD/MM/YYY", type = "date" })
        <input type="submit" value="Search" />
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(m => m.dateDay).ToString(), "Index", new { sortOrder = ViewBag.DateSortParam })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.beginningCash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.endCash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TERMINAL.nameTerminal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dateDay, new { placeholder = "DD/MM/YYY", type = "date" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.beginningCash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endCash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TERMINAL.nameTerminal)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id1 = item.dateDay, id2 = item.TERMINAL.idTerminal }) |
                    @Html.ActionLink("Details", "Details", new { id1 = item.dateDay, id2 = item.TERMINAL.idTerminal }) |*@
                @Html.ActionLink("Delete", "Delete", new { id1 = item.dateDay, id2 = item.TERMINAL.idTerminal })
            </td>
        </tr>
    }

</table>
